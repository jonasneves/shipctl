{
  "manifest_version": 3,
  "name": "shipctl",
  "version": "0.1.0",
  "description": "Ship from your browser. DevOps control plane for modern developers.",
  "permissions": [
    "sidePanel",
    "storage",
    "nativeMessaging"
  ],
  "host_permissions": [
    "https://api.github.com/*",
    "http://localhost:*/*",
    "http://127.0.0.1:*/*"
  ],
  "side_panel": {
    "default_path": "index.html"
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "action": {
    "default_title": "shipctl"
  }
}
